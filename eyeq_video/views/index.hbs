
<!-- https://github.com/donpark/hbs/tree/master/examples/partial -->
<!-- {{> contributors}} -->
{{#each gnResponse}}	
<div class="row result-row">
	<ul class="list-unstyled">
	  <li><h1>{{this.name}}</h1></li>
	  <li>{{this.gnid}}</li>
	  <li><br></li>
	  <li>{{this.biography}}</li>
	</ul>
	
</div>

<div class="row result-row">
	<h3>Works</h3>	
	<ul class="list-inline" >
		{{#each this.mediagraphy}}
			{{#if_cond this.type '==' "work"}}
			 	{{#if this.image_url}}
					<li><img src="{{this.image_url}}" alt='{{this.image_url}}' class="img-thumbnail"></li>						
				{{/if}}	
			{{/if_cond}}	
		{{/each}}		
	</ul>
</div>

<div class="row result-row">
	<h3>Series</h3>	
	<ul class="list-inline">
		{{#each this.mediagraphy}}
			{{#if_cond this.type '==' "series"}}
			 	{{#if this.image_url}}
					<li><img src="{{this.image_url}}" alt='{{this.image_url}}' class="img-thumbnail"></li>						
				{{/if}}	
			{{/if_cond}}	
		{{/each}}	
	
	</ul>
	
	{{/each}}
</div>



